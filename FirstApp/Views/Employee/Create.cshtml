@model Employee
@{
    ViewData["Title"] = "Create";
}
<a asp-action="Index">Lihat Daftar Pegawai</a>
<h2>Input</h2>
<form method="post">
    <p>
        <label asp-for="Name">Nama:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </p>
    <p>
        <label asp-for="Age">Umur:</label>
        <input asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </p>
    <p>
        <label asp-for="Salary">Gaji:</label>
        <input asp-for="Salary" />
        <span asp-validation-for="Salary"></span>
    </p>
    <p>
        <label asp-for="Department">Bagian:</label>
        <select asp-for="Department">
            <option value="Development">Tester</option>
            <option value="code">Pemrograman</option>
            <option value="noncode">Non-Pemrograman</option>
        </select>
        <span asp-validation-for="Department"></span>
    </p>
    <p>
        <label asp-for="Sex">Jenis Kelamin:</label>
        <input type="radio" asp-for="Sex" value="M" />Male
        <input type="radio" asp-for="Sex" value="F" />Female
        <span asp-validation-for="Sex"></span>
    </p>
    <p><button type="submit">Submit</button></p>
</form>

